      grid: { row: 0, col: 1 },
      size: { w: 120, h: 140 }
    },
    { 
      id: 'hatchery' as Room, 
      name: 'Hatchery', 
      icon: 'ü•ö',
      image: '/assets/buildings/farm.png',
      grid: { row: 2, col: 1 },
      size: { w: 110, h: 130 }
    },
    { 
      id: 'battle' as Room, 
      name: 'Battle Arena',
      icon: '‚öîÔ∏è',
      image: '/assets/buildings/fortress.png',
      grid: { row: 1, col: 2 },
      size: { w: 120, h: 140 }
    },
    { 
      id: 'training' as Room, 
      name: 'Training Dojo',
      icon: 'ü•ã',
      image: '/assets/buildings/tower.png',
      grid: { row: 0, col: 3 },
      size: { w: 110, h: 150 }
    },
    { 
      id: 'marketplace' as Room, 
      name: 'Trading Post',
