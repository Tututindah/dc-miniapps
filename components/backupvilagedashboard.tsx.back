      image: '/assets/buildings/farm.png',
      grid: { row: 2, col: 3 },
      size: { w: 110, h: 130 }
    },
  ];

  // Isometric grid converter - landscape responsive
  const gridToIso = (row: number, col: number) => {
    const isMobile = typeof window !== 'undefined' && window.innerWidth < 640;
    
    // Landscape optimized spacing
    const tileWidth = isMobile ? 90 : 140;
    const tileHeight = isMobile ? 45 : 70;
    const offsetX = isMobile ? 20 : 25; // Start more from center
    const offsetY = 45; // Center vertically
    
    // Isometric: col dominan horizontal, row untuk depth
    const x = offsetX + (col - row) * tileWidth / 10;
    const y = offsetY + (col + row) * tileHeight / 10;
    
    return { x, y };
  };

  return (
    <div className="relative w-full h-screen overflow-hidden bg-gradient-to-b from-sky-300 to-sky-400">
      {/* Top Navigation Bar */}
      <div className="relative z-50 bg-gradient-to-r from-blue-600 to-blue-700 shadow-lg">
        <div className="w-full px-2 sm:px-4 py-2 sm:py-3 flex justify-between items-center">
