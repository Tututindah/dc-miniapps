  // Force refresh on mount to clear Farcaster cache
  useEffect(() => {
    const timestamp = new Date().getTime();
    console.log('VillageDashboard v2.0 loaded at:', timestamp);
  }, []);

  return (
    <div className="min-h-screen">
      {currentRoom === 'village' ? (
        <VillageHub onNavigate={setCurrentRoom} />
      ) : (
        <RoomView room={currentRoom} onBack={() => setCurrentRoom('village')} />
      )}
